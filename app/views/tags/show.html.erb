<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>

<% if logged_in? %>
  <%= link_to "delete", tag_path(@tag), method: :delete, data: {confirm: "Really delete tag?"} %>
<% end %>

<%= link_to "See list of tags", tags_path %>
